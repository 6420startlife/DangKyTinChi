<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_item_marks"
    android:layout_marginVertical="2dp"
    android:background="@drawable/background_item_marks">
    <TextView
        android:id="@+id/tvTenMonHoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/large_space"
        android:textColor="@color/dark_red"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tvDiemTrungBinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/short_space"
        android:textAlignment="textEnd"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvLabelDiem"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tvLabelDiem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/short_space"
        android:text="@string/string_diem"
        app:layout_constraintBottom_toBottomOf="@+id/tvDiemTrungBinh"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>